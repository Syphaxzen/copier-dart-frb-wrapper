// {{ package_name }} - Android FFI Plugin with pre-built native libraries
// Uses pre-built lib{{ crate_name }}.so from src/main/jniLibs/ (standard location)

group = "org.{{ package_name }}.{{ package_name }}"
version = "1.0"

buildscript {
    repositories {
        google()
        mavenCentral()
    }

    dependencies {
        classpath("com.android.tools.build:gradle:{{ android_gradle_version }}")
    }
}

rootProject.allprojects {
    repositories {
        google()
        mavenCentral()
    }
}

apply plugin: "com.android.library"

android {
    namespace = "org.{{ package_name }}.{{ package_name }}"
    compileSdk = {{ android_compile_sdk }}

    // NDK version for Rust cross-compilation
    ndkVersion = "{{ android_ndk_version }}"

    compileOptions {
        sourceCompatibility = JavaVersion.VERSION_{{ android_java_version }}
        targetCompatibility = JavaVersion.VERSION_{{ android_java_version }}
    }

    defaultConfig {
        minSdk = {{ android_min_sdk }}
    }
}
